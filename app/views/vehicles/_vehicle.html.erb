<div id="<%= dom_id vehicle %>" class="rounded-lg bg-gray-200 shadow max-w-xs">
  <div class="p-2 border-b-1 border-black shadow">
    <%= tag.h3 vehicle.name, class: "text-lg font-medium" %>
  </div>

  <div class="p-2">
    <div class="mb-4">
      <h3 class="text-md font-medium">Carried Bundles</h3>
      <ul class="list-none text-sm">
        <% vehicle.vehicle_bundles.each do |vb| %>
          <%= tag.li "#{vb.bundle.name} (x#{vb.quantity})" %> 
        <% end %>
      </ul>
    </div>

    <div>
      <h3 class="text-md font-medium">Capacity</h3>
      <ul class="list-none text-sm">
        <%= tag.li "#{vehicle.vehicle_bundles.sum(:quantity)} / #{vehicle.capacity}" %> 
      </ul>
    </div>
  </div>
</div>
