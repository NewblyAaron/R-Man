<div id="<%= dom_id barangay %>" class="rounded-lg bg-gray-200 shadow max-w-xs">
  <div class="p-2 border-b-1 border-black shadow">
    <%= tag.h3 barangay.name, class: "text-lg font-medium" %>
  </div>

  <div class="p-2">
    <div class="mb-4">
    <h3 class="text-md font-medium">Purok List</h3>
      <ul class="list-none text-sm">
        <% barangay.barangay_puroks.each do |purok| %>
          <%= tag.li purok.name %>
        <% end %>
      </ul>
    </div>
    <div>
      <h3 class="text-md font-medium">Total Population</h3>
      <ul class="list-none text-sm">
        <%= tag.li barangay.get_total_families %>
      </ul>
    </div>
  </div>
</div>
