<div class="flex flex-col min-h-full items-center justify-center p-24 max-w-xl m-auto">
  <div>
    <img src="<%= image_path("rman_logo.png") %>" class="shrink-0" />
  </div>

  <%= form_with(model: User, url: auth_url) do |form| %>
    <div class="mb-4">
      <%= form.label :username %>
      <%= form.text_field :username, class: "field", placeholder: "Username" %>
    </div>

    <div class="mb-4">
      <%= form.label :password %>
      <%= form.password_field :password, class: "field", placeholder: "Password" %>
    </div>

    <%= form.submit "Login", class: "btn-primary float-right" %>
  <% end %>
</div>