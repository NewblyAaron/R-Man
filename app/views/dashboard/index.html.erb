<h1 class="text-2xl my-4">Welcome, <%= Current.user.username %></h1>

<div class="rounded-md bg-white shadow">
  <div class="p-4 border-b-2 border-gray-200">
    <h3 class="text-lg font-medium">Items that will run out soon...</h3>
  </div>

  <div class="flex flex-row flex-wrap space-x-8 p-4">
    <% Item.all.each do |item| %>
      <% if item.stock <= 50 %>
        <%= link_to(item) do %>
        <div class="rounded-lg bg-gray-200 shadow max-w-xs">
          <div class="p-2 border-b-1 border-black shadow">
            <%= tag.h3 item.name, class: "text-md font-medium" %>
          </div>

          <div class="p-2">
            <p>
              Current stock: <%= item.stock %>
            </p>
          </div>
        </div>
        <% end %>
      <% end %>
    <% end %>
  </div>

</div>